# Server
# Render provides PORT automatically. For local dev you can keep 8080.
PORT=8080

# REQUIRED (do not hardcode in code)
# Generate a strong secret (example): openssl rand -base64 48
JWT_SECRET=change_this_secret
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
DISTRICT_DEFAULT_PASSWORD=change_this_password

# Admin email where submissions are sent
ADMIN_EMAIL=admin@example.com

# SMTP (optional; leave blank to disable email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_FROM="District Platform <no-reply@example.com>"
