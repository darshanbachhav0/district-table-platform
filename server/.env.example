# Server
PORT=8080

# REQUIRED
JWT_SECRET=change_this_secret
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
DISTRICT_DEFAULT_PASSWORD=change_this_password

# MongoDB Atlas (REQUIRED)
# Example:
# mongodb+srv://USER:PASS@cluster0.xxxxx.mongodb.net/district_platform?retryWrites=true&w=majority
MONGODB_URI=
MONGODB_DB=district_platform

# Optional email to admin when district "Send" is clicked
ADMIN_EMAIL=admin@example.com

# SMTP (optional; leave blank to disable email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_FROM="District Platform <no-reply@example.com>"
